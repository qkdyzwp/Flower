<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/linkman_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王鹏"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/linkman_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18646082763"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:textColor="#333333"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/linkman_item_address"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="12sp"
                android:text="黑龙江 哈尔滨市 香坊区"
                android:textColor="#717171"/>
            <TextView
                android:id="@+id/linkman_item_address_detail"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="18646082763"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:textColor="#717171"/>
        </LinearLayout>
        <ImageView
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/edit"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_all"></View>
</LinearLayout>