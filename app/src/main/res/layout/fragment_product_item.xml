<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:selectableItemBackground"
        card_view:cardBackgroundColor="#fff8f8f8"
        card_view:cardCornerRadius="4.0dip"
        card_view:cardElevation="4.0dip"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:padding="20.0dip">

            <ImageView
                android:id="@+id/main_pager_product_icon"
                android:layout_width="120.0dip"
                android:layout_height="120.0dip"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/main_pager_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_pager_product_icon"
                android:layout_marginTop="5.0dp"
                android:text="商品名称"
                android:textColor="#ff888888"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/main_pager_product_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_pager_product_title"
                android:layout_marginTop="5.0dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="商品简介"
                android:textColor="#ffa8a8a8"
                android:textSize="12.0sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/main_pager_product_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_pager_product_content"
                android:layout_marginTop="10.0dip"
                android:text="￥138.0"
                android:textColor="#ffff5b46" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>