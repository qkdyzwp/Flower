<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_all"
    >
    <include
        layout="@layout/head_layout_for_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"></include>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_all" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/my_integral_shop"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff">
            <TextView
                style="@style/my_menu_text"
                android:layout_toRightOf="@+id/my_integral_shop_img"
                android:text="清除缓存"
                android:textColor="#333333"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="0.00MB"
                android:layout_toLeftOf="@+id/set_img"
                android:layout_marginRight="15dp"
                android:id="@+id/dataTv"/>
            <ImageView style="@style/my_menu_right_img"
                android:id="@+id/set_img"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/space_15"
            android:background="@color/background_all" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff">
            <TextView
                style="@style/my_menu_text"
                android:layout_toRightOf="@+id/my_integral_shop_img_2"
                android:text="系统更新"
                android:textColor="#333333"
                android:textSize="14sp"/>
            <ImageView style="@style/my_menu_right_img" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/space_15"
            android:background="@color/background_all" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff">
            <TextView
                style="@style/my_menu_text"
                android:layout_toRightOf="@+id/my_integral_shop_img_3"
                android:text="关于我们"
                android:textColor="#333333"
                android:textSize="14sp"/>
            <ImageView style="@style/my_menu_right_img" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/background_all" />
        <RelativeLayout
            android:id="@+id/loginout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:gravity="center_horizontal">
            <TextView
                android:gravity="center"
                style="@style/my_menu_text"
                android:layout_toRightOf="@+id/my_integral_shop_img_4"
                android:text="注销登录"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>