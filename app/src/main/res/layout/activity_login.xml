<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff5f5f5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40.0dip"
        android:layout_marginTop="40.0dip"
        android:background="@mipmap/login_logo" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_marginBottom="@dimen/space_7"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:background="@drawable/common_button_white_bg"
        android:orientation="horizontal"
        android:padding="1.0dip">

        <EditText
            android:maxLength="11"
            android:id="@+id/login_username_et"
            android:layout_width="0.0dip"
            android:layout_height="44.0dip"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:digits="1234567890."
            android:drawableLeft="@mipmap/login_icon_account"
            android:drawablePadding="@dimen/space_15"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="手机号"
            android:inputType="number"
            android:paddingLeft="10.0dip"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textColorHint="#ffbababa"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:background="@drawable/common_button_white_bg"
        android:orientation="horizontal"
        android:padding="1dp">

        <EditText
            android:id="@+id/login_password_et"
            android:layout_width="0.0dip"
            android:layout_height="44.0dip"
            android:layout_weight="1.0"
            android:background="#00000000"
            android:drawableLeft="@mipmap/login_icon_password"
            android:drawablePadding="15.0dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/space_10"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textColorHint="#ffbababa"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/login_mobile"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginTop="19.0dip"
        android:background="@drawable/common_button_bound_red_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="立即登录"
        android:textColor="#ffff5b46"
        android:textSize="14.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:gravity="center"
            android:onClick="getVoiceCode"
            android:padding="15.0dip"
            android:text="注册"
            android:textColor="#ff6b95b0"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/login_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:gravity="center"
            android:onClick="getVoiceCode"
            android:padding="15.0dip"
            android:text="忘记密码？"
            android:textColor="#ff6b95b0"
            android:textSize="14.0sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_weichat_line"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/login_weichat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20.0dip"
            android:layout_marginTop="4.0dip"
            android:text="微信登录"
            android:textColor="#ffbababa"
            android:textSize="10.0sp" />
    </LinearLayout>
</LinearLayout>